package com.company;

class Base1{
    int X;

    public int getX() {
        return X;
    }

    public void setX(int x) {
        X = x;
    }
   public Base1(){
       System.out.println("I am base class constructor");
   }

   public Base1(int X){
       System.out.println("The value of X is " + X);
   }
}
class Derived1 extends Base1{
    int Y;

    public int getY() {
        return Y;
    }

    public void setY(int y) {
        Y = y;
    }

    public Derived1(){
        //super(5);
        System.out.println("I am derieved class constructor");
    }

    public Derived1(int X , int Y){
        super(X);
        System.out.println("The value of Y is" + Y); // whenever you want to make base class parameterized constructor executes you have to use super keyword in derived class with the vlaue or with the variable name
    }
}

class child extends Derived1{
    int Z;

    public int getZ() {
        return Z;
    }

    public void setZ(int z) {
        Z = z;
    }

    public child(){
        System.out.println("I am the child class constructor");
    }
    public child(int X ,int Y ,int Z){
        super(X,Y);
        System.out.println("The value of Z is " + Z);
    }
}
public class Constructor_Inheritance {
    public static void main (String [] args){
       // Base1 B = new Base1();
child C = new child(5,6,7);
    }
}
